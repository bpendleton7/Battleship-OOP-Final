            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#03A9F4"
            android:onClick="exitOnClick"
            android:text="exit"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_done"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#03A9F4"
            android:onClick="downOnClick"
            android:text="down"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_exit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#03A9F4"
            android:onClick="rightOnClick"
            android:text="right"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_reset"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
